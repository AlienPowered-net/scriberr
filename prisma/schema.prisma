generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x"] // needed for Vercel
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Neon *pooled* URL
  directUrl = env("DIRECT_URL")   // Neon *non-pooled* URL (for migrations)
}

model Shop {
  id        String   @id @default(cuid())
  domain    String   @unique           // e.g. dev-alienpowered.myshopify.com
  folders   Folder[]
  notes     Note[]
  createdAt DateTime @default(now())
}

model Folder {
  id        String   @id @default(cuid())
  shopId    String
  name      String
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop      Shop     @relation(fields: [shopId], references: [id])
  @@index([shopId, name])
}

model Note {
  id        String   @id @default(cuid())
  shopId    String
  folderId  String
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop      Shop     @relation(fields: [shopId], references: [id])
  folder    Folder   @relation(fields: [folderId], references: [id])
  @@index([shopId, folderId, updatedAt])
}
